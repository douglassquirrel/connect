<h1>Tasks by type</h1>

<table class="tochart" summary="Tasks submitted by type">
  <tr>
    <th>Type</th>
    <th>Number of Tasks</th>
  </tr>

<% @tasks.group_by(&:type).each do |type, tasks| %>
  <tr>
    <td><%=h type.name %></td>
    <td><%=h tasks.length %></td>
  </tr>
<% end %>
</table>

<script type="text/javascript" src="/javascripts/table2chart.js"></script>

